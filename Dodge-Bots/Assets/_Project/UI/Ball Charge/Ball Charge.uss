.container {
	flex-direction: column-reverse;
	display: flex;
}

.charge_bar {
	padding-right: 100px;
	padding-left: 100px;
	position: relative;
	bottom: 5%;
	width: 100%;
	height: 5%;
}

.unity-progress-bar__container {
	border-color: rgb(225, 225, 255);
	border-radius: 10px;
	border-width: 5px;
}

.unity-progress-bar__background {
	background-color: rgb(75, 150, 255);
	border-radius: 5px;
}

.unity-progress-bar__progress {
	background-color: rgb(50, 100, 225);
	border-radius: 5px;
}